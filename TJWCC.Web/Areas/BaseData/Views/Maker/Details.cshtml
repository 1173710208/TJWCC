@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        $.ajax({
            url: "/BaseData/Maker/GetFormJson",
            data: { makerID: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
    });
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">供应商编号</th>
                <td class="formValue">
                    <input id="MAKERID" name="MAKERID" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">供应商名称</th>
                <td class="formValue">
                    <input id="MNAME" name="MNAME" type="text" class="form-control required" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">供应商地址</th>
                <td class="formValue">
                    <input id="ADDRESS" name="ADDRESS" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">联系人</th>
                <td class="formValue">
                    <input id="CONTACT" name="CONTACT" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">联系电话</th>
                <td class="formValue">
                    <input id="MOBILE" name="MOBILE" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle" valign="top" style="padding-top: 5px;">
                    备注
                </th>
                <td class="formValue">
                    <textarea id="REMARK" name="REMARK" class="form-control" style="height: 60px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>
