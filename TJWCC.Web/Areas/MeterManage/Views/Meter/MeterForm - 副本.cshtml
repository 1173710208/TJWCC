    function submitForm1() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm1({
            url: "/MeterManage/Meter/RegisteredMeter",
            param: $("#form1").formSerialize(),
            success: function (data) {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
