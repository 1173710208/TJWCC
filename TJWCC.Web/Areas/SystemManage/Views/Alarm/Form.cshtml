@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Alarm/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    console.log(data)
                    $("#form1").formSerialize(data);
                }
            });
        }
    });
    function initControl() {
        $("#MeasureAreaId").bindSelect({
            url: "/SystemManage/SysDic/GetTreeSelectJson",
        })
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/Alarm/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="Meter_Name" name="Meter_Name" type="text" class="form-control"  placeholder="请输入名称" />
                    </td>
                    <th class="formTitle">表号</th>
                    <td class="formValue">
                        <input id="Station_Key" name="Station_Key" type="text" class="form-control" placeholder="请输入表号"/>
                    </td>
                </tr>
                <tr>

                    <th class="formTitle">分区</th>
                    <td class="formValue">
                        <select id="MeasureAreaId" name="MeasureAreaId" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">型号</th>
                    <td class="formValue">
                        <input id="Explain" name="Explain" type="text" class="form-control"  placeholder="请输入型号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">超上限</th>
                    <td class="formValue">
                        <input id="PHUp" name="PHUp" type="text" class="form-control required"   placeholder="请输入超上限"/>
                    </td>
                    <th class="formTitle">超下限</th>
                    <td class="formValue">
                        <input id="PHDown" name="PHDown" type="text" class="form-control required" placeholder="请输入超下限" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">上限</th>
                    <td class="formValue">
                        <input id="PressureUp" name="PressureUp" type="text" class="form-control" placeholder="请输入上限"/>
                    </td>
                    <th class="formTitle">下限</th>
                    <td class="formValue">
                        <input id="PressureDown" name="PressureDown" type="text" class="form-control" placeholder="请输入下限"/>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">安装位置</th>
                    <td class="formValue">
                        <input id="MeasureAreaId" name="MeasureAreaId" type="text" class="form-control"  placeholder="请输入安装位置"/>
                    </td>
                    <th class="formTitle">允许显示</th>
                    <td class="formValue">
                        <select id="Display" name="Display" class="form-control">
                            <option value="1">显示</option>
                            <option value="0">隐藏</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Remark" name="Remark" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
            <input id="ID" name="ID" type="hidden" />
        </div>
    </div>
</form>
