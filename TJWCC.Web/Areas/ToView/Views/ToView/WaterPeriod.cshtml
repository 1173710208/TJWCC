@{
    ViewBag.Title = "周期水量";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({ 
            url: "/ToView/ToView/GetMeterRecordJson",
            height: $(window).height() - 128,
            colModel: [
                { label: "编号", name: "ID", hidden: true, key: true },
                { label: 'IMEI', name: 'IMEI', align: 'left' },
                { label: '水量采集时间', name: 'RECORDTIME', align: 'left' },
                { label: '用水量', name: 'COUNT', align: 'left' },
                { label: '水量保存时间', name: 'SAVEDATE', align: 'left' },
                { label: '数值类型ID', name: 'VTYPEID', align: 'left' },
                { label: '备注', name: 'REMARK', align: 'left' }

            ],
            pager: "#gridPager",
            sortname: 'IMEI asc,SAVEDATE desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { imei: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>

    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入IMEI号" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

