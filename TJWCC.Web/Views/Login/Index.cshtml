    <script type="text/javascript">
        (function ($) {
            //验证码方法调用

            //登录
            $.login = {
                formMessage: function (msg) {
                    $('.login_tips').find('.tips_msg').remove();
                    if (msg.length > 0)
                        $('.login_tips').append('<div class="tips_msg"><i class="fa fa-question-circle"></i>' + msg + '</div>');
                },
                loginClick: function () {
                    var $username = $("#txt_account");
                    var $password = $("#txt_password");
                    if ($username.val() == "") {
                        $username.focus();
                        $.login.formMessage('请输入用户名');
                        return false;
                    } else if ($password.val() == "") {
                        $password.focus();
                        $.login.formMessage('请输入登录密码');
                        return false;
                    } 
                    // else {
                    //    $(".slidercaptcha").show();
                    //    $.login.formMessage('请完成安全验证！');
                    //    return false;
                    //}
                },
                init: function () {
                    //$(".slidercaptcha").hide();

                    $('.wrapper').height($(window).height());
                    $(window).resize(function (e) {
                        $('.wrapper').height($(window).height());
                    });
                    var login_error = top.$.cookie('TJWCC_login_error');
                    if (login_error != null) {
                        switch (login_error) {
                            case "overdue":
                                $.login.formMessage("系统登录已超时,请重新登录");
                                break;
                            case "OnLine":
                                $.login.formMessage("您的帐号已在其它地方登录,请重新登录");
                                break;
                            case "-1":
                                $.login.formMessage("系统未知错误,请重新登录");
                                break;
                        }
                        top.$.cookie('TJWCC_login_error', '', { path: "/", expires: -1 });
                    }
                    $("#sbmit-btn").click(function () {
                        $.login.loginClick();
                        var $username = $("#txt_account");
                        var $password = $("#txt_password");

                        $.login.formMessage('');
                        $("#sbmit-btn").attr('disabled', 'disabled').find('span').html("loading...");
                        $.ajax({
                            url: "/Login/CheckLogin",
                            data: { username: $.trim($username.val()), password: $.md5($.trim($password.val()))/*, code: $.trim($code.val())*/ },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.state == "success") {
                                    $("#sbmit-btn").find('span').html("登录成功，正在跳转...");
                                    window.setTimeout(function () {
                                        window.location.href = "/DataDisplay/Main/Index";
                                        //window.location.href = "/Home/index";
                                    }, 500);
                                } else {
                                    $("#sbmit-btn").removeAttr('disabled').find('span').html("登&nbsp;&nbsp;录");
                                    $.login.formMessage(data.message);
                                    $(".refreshIcon").click();
                                }
                            }
                        });
                    });
                    document.onkeydown = function (e) {
                        if (!e) e = window.event;
                        if ((e.keyCode || e.which) == 13) {
                            document.getElementById("sbmit-btn").focus();
                            document.getElementById("sbmit-btn").click();
                        }
                    }
                }
            };
            $(function () {
                $.login.init();
            });
        })(jQuery);

